<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class="text-center" >Contato</h1>
      <p class="text-center lead">Preencha o formul√°rio abaixo para criar um novo contato em sua agenda pessoal.</div>
        <% include("includes/messages") %>
        <div class="row">
        </div>
        <div class="col-lg">

          <% if(contato._id){ %>
            <h4>Edite o Contato: <%= contato.name %></h4>
          <form action="/contato/update/<%= contato._id %>" method="POST">
          <% } else { %>
            <h4>Cadastre seu novo contato!</h4>
            <form action="/contato/register" method="POST">
          <% } %>
            <input type="hidden" name="_csrf" value=<%= csrfToken %> >
            <div class="form-group">
              <label for="exampleInputEmail1">Nome</label>
              <input value="<%= contato.name %>" name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nome do Contato">
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input value="<%= contato.email %>" name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email do contato">
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Telefone</label>
              <input value="<%= contato.phone %>" name="phone" type="tel" class="form-control" id="exampleInputPassword1" placeholder="telefone">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
